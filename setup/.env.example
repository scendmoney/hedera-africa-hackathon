# TrustMesh Environment Configuration
# Copy this to .env and fill in your actual values

# Hedera Network Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=your_private_key_here

# TrustMesh HCS Topic IDs (create these first with the setup script)
TRUSTMESH_PROFILES_TOPIC=0.0.PROFILES_TOPIC_ID
TRUSTMESH_TRUST_TOKENS_TOPIC=0.0.TRUST_TOKENS_TOPIC_ID
TRUSTMESH_BADGES_TOPIC=0.0.BADGES_TOPIC_ID
TRUSTMESH_REPUTATION_TOPIC=0.0.REPUTATION_TOPIC_ID
TRUSTMESH_POLLS_TOPIC=0.0.POLLS_TOPIC_ID

# Database Configuration (Optional - for production)
DATABASE_URL=postgresql://user:password@localhost:5432/trustmesh
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Security (Generate secure values for production)
SECRET_KEY=your_secret_key_here_generate_secure_value
JWT_SECRET=your_jwt_secret_here_generate_secure_value

# Demo Configuration
DEMO_MODE=true
DEMO_DATA_SEED=hackathon_2025

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=optional_sentry_dsn_for_error_tracking

# Development Tools
PYTHONPATH=./python-sdk
PYTEST_CURRENT_TEST=true
